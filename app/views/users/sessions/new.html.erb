<p class="notice"><%= notice %></p>


  <section class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="box">
            <h1 class="title">Login  <p class="help is-danger"> <%= alert %></p></h1>
            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="field">
                <%= f.label "Usuário", class: "label" %>
                <div class="control has-icons-left has-icons-right">
                  <%= f.text_field :email, class: "input is-success", placeholder: "Digite seu usuário" %>
                  <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                  </span>
                  <span class="icon is-small is-right">
                    <i class="fas fa-check"></i>
                  </span>
                  <p class="help is-success"></p>
                </div>     
              </div>

              <div class="field">
                <%= f.label "Senha", class: "label" %>
                <div class="control has-icons-left has-icons-right">
                  <%= f.password_field :password, class: "input is-success", placeholder: "Digite sua senha" %>
                  <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                  </span>
                  <span class="icon is-small is-right">
                    <i class="fas fa-check"></i>
                  </span>
                </div>
                <p class="help is-success"></p>
              </div>
              <br>
              <div class="actions">
                <div class="has-text-centered">
                 <%= button_tag "Entrar", class: "button is-primary", type: "submit" %>
                </div>
              </div>

              <% # if devise_mapping.rememberable? %>
                <div class="field">
                  <%# f.check_box :remember_me %>
                  <%# f.label :remember_me %>
                </div>
              <% # end %>
            <% end %>

            <% # render "users/shared/links" %>
        </div>
      </div>
    </div>
  </section>




