<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :survey_id, style: "display: block" %>
    <%= form.text_field :survey_id %>
  </div>

  <div>
    <%= form.label :organization_id, style: "display: block" %>
    <%= form.collection_select(:organization_id, @organizations, :id, :name) %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :date_init, style: "display: block" %>
    <%= form.datetime_field :date_init %>
  </div>

  <div>
    <%= form.label :date_end, style: "display: block" %>
    <%= form.datetime_field :date_end %>
  </div>

  <div>
    <%= form.label :acessurl, style: "display: block" %>
    <%= form.text_field :acessurl %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.check_box :status %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
